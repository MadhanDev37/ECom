<%- include('../layouts/header.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    <%- include('../layouts/sidebar.ejs')%>
    <!-- End of Sidebar -->

    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <!-- Topbar -->
            <%- include('../layouts/navbar.ejs')%>
            <!-- End of Topbar -->

            <div class="container-fluid">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <a href="/admin/users" class="h5 m-0"><i class="fas fa-angle-left"></i> Go back to users list</a>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-body">
                        <h5 class="text-info">Create New User</h5>
                            <form action="/admin/users/add" class="mt-3" method="post" novalidate enctype="application/x-www-form-urlencoded">
                                <div class="form-group">
                                    <label for="title">Name</label>
                                    <input type="text" name="username" id="username" class="form-control <%= validationErrors.find(e => e.path === 'username') ? 'invalid' : '' %>" value="<%=oldInput.username%>">
                                    <span class="text-danger">
                                        <% const nameError = validationErrors.find(e => e.path === 'username'); %>
                                        <%= nameError ? nameError.msg : '' %>
                                      </span>                                      
                                </div>  
                                <div class="form-group">
                                    <label for="title">Email</label>
                                    <input type="email" name="email" id="email" class="form-control <%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>" value="<%=oldInput.email%>">
                                    <span class="text-danger">
                                        <% const emailError = validationErrors.find(e => e.path === 'email'); %>
                                        <%= emailError ? emailError.msg : '' %>
                                      </span>                                      
                                </div>  
                                <div class="form-group">
                                    <label for="title">Password</label>
                                    <input type="password" name="password" id="password" class="form-control <%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>" value="<%=oldInput.password%>">
                                    <span class="text-danger">
                                        <% const passwordError = validationErrors.find(e => e.path === 'password'); %>
                                        <%= passwordError ? passwordError.msg : '' %>
                                      </span>                                      
                                </div>  
                                <div class="form-group">
                                    <label for="title">Confirm Password</label>
                                    <input type="password" name="cpassword" id="cpassword" class="form-control <%= validationErrors.find(e => e.path === 'cpassword') ? 'invalid' : '' %>" value="<%=oldInput.cpassword%>">
                                    <span class="text-danger">
                                        <% const cpasswordError = validationErrors.find(e => e.path === 'cpassword'); %>
                                        <%= cpasswordError ? cpasswordError.msg : '' %>
                                      </span>                                      
                                </div>  
                                <div class="form-group">
                                    <input type="checkbox" value="0" id="status" name="status" <% if (oldInput.status) { %>checked="checked"<% } %>>
                                    <label for="status">Active</label>
                                </div>
                                <div class="form-group">
                                    <button type="submit"  class="btn btn-primary">Create</button>
                                </div>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/script.ejs')%>

<script>
    $(document).ready(function() {
        $('#dataTable').DataTable();
    });
</script>

<%- include('../layouts/footer.ejs')%>