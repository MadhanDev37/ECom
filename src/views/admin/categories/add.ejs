<%- include('../layouts/header.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    <%- include('../layouts/sidebar.ejs') %>
    <!-- End of Sidebar -->

    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <!-- Topbar -->
            <%- include('../layouts/navbar.ejs') %>
            <!-- End of Topbar -->

            <div class="container-fluid">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <a href="/admin/categories" class="h5 m-0">
                        <i class="fas fa-angle-left"></i> Go back to categories list
                    </a>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-body">
                        <h5 class="text-info">Create New Category</h5>
                        
                        <form action="/admin/categories/add" method="POST" enctype="multipart/form-data" class="mt-3" novalidate>
                            <div class="form-group">
                                <label for="title">Name</label>
                                <input 
                                    type="text" 
                                    name="title" 
                                    id="title" 
                                    class="form-control <%= validationErrors && validationErrors.find(e => e.path === 'title') ? 'is-invalid' : '' %>" 
                                    value="<%= oldInput && oldInput.title ? oldInput.title : '' %>"
                                >
                                <% if (validationErrors) { 
                                    const nameError = validationErrors.find(e => e.path === 'title');
                                %>
                                    <% if (nameError) { %>
                                        <span class="text-danger"><%= nameError.msg %></span>
                                    <% } %>
                                <% } %>
                            </div>

                            <div class="preview-images-zone d-none"></div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Create</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/script.ejs') %>

<script>
    $(document).ready(function() {
        $('#dataTable').DataTable();
    });
</script>

<%- include('../layouts/footer.ejs') %>
