<%- include('../layouts/header.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    <%- include('../layouts/sidebar.ejs')%>
    <!-- End of Sidebar -->

    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <!-- Topbar -->
            <%- include('../layouts/navbar.ejs')%>
            <!-- End of Topbar -->

            <div class="container-fluid">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <a href="/admin/categories" class="h5 m-0"><i class="fas fa-angle-left"></i> Go back to categories lists</a>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-body">
                        <h5 class="text-info">Edit Category</h5>
                            <form action="/admin/categories/edit" class="mt-3" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <input type="hidden" name="categoryId" value="<%= category._id %>">
                                </div>
                                <div class="form-group">
                                    <label for="title">Name</label>
                                    <input type="text" name="title" id="title" class="form-control <% validationErrors.find( e=> e.path === 'name' ) ? 'invalid' : ''%>" value="<%=category.title%>">
                                    <span class="text-danger">
                                        <% const nameError = validationErrors.find(e => e.path === 'title'); %>
                                    <%= nameError ? nameError.msg : '' %>
                                    </span>
                                </div>
                                <div class="form-group">
                                    <button type="submit"  class="btn btn-primary">Update</button>
                                </div>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/script.ejs')%>

<script>
    $(document).ready(function() {
        $('#dataTable').DataTable();
    });
</script>

<%- include('../layouts/footer.ejs')%>